<CalcAppRoot>

	calc_field: calc_field

	orientation: 'vertical'
	Label:
		size_hint: (1, 0.2)
		text: 'Calculadora de Honorarios\n[b]RESICO[/b]'
		markup: True
		font_size: 42
		halign: 'center'
		valign: 'middle'
	TextInput:
		id: calc_field
		size_hint: (1, 0.15)
		hint_text: '0'
		font_size: 96
		input_type: 'number'
		input_filter: 'float'
		multiline: False
		readonly: True
		disabled: False
		is_focusable: False
		padding: 20
		halign: 'right'
	GridLayout:
		rows: 4
		columns: 3
		padding: 20
		spacing: 20
		size_hint: (1, 0.4)
		Button:
			text: "1"
			font_size: 42
			on_press: root.calc_input_symbol('1')
		Button:
			text: "2"
			font_size: 42
			on_press: root.calc_input_symbol('2')
		Button:
			text: "3"
			font_size: 42
			on_press: root.calc_input_symbol('3')
		Button:
			text: "4"
			font_size: 42
			on_press: root.calc_input_symbol('4')
		Button:
			text: "5"
			font_size: 42
			on_press: root.calc_input_symbol('5')
		Button:
			text: "6"
			font_size: 42
			on_press: root.calc_input_symbol('6')
		Button:
			text: "7"
			font_size: 42
			on_press: root.calc_input_symbol('7')
		Button:
			text: "8"
			font_size: 42
			on_press: root.calc_input_symbol('8')
		Button:
			text: "9"
			font_size: 42
			on_press: root.calc_input_symbol('9')
		Button:
			text: "C"
			font_size: 42
			on_press: root.calc_field_clear()
		Button:
			text: "0"
			font_size: 42
			on_press: root.calc_input_symbol('0')
		Button:
			text: "."
			font_size: 42
			on_press: root.calc_input_symbol('.')
	GridLayout:
		rows: 1
		columns: 3
		padding: 20
		spacing: 20
		size_hint: (1, 0.2)
		Button:
			text: "Honorarios\nNetos"
			font_size: 42 
			halign: 'center'
			on_press: root.calc_eval_net()
		Button:
			text: "Honorarios\nBrutos"
			font_size: 42
			halign: 'center'
			on_press: root.calc_eval_gross()
	Label:
		size_hint: (1, 0.1)
		font_size: 20
		markup: True
		text: 'Â© 2022 Gatonegro <adolf@gatoneg.ro>'
		color: '#999999'
